{
  "version": 2,
  "customTemplates": [
    {
      "name": "front-page",
      "title": "Front Page",
      "postTypes": ["page"]
    },
    {
      "name": "page-services",
      "title": "Services Page",
      "postTypes": ["page"]
    },
    {
      "name": "page-about",
      "title": "About Page",
      "postTypes": ["page"]
    },
    {
      "name": "page-contact",
      "title": "Contact Page",
      "postTypes": ["page"]
    },
    {
      "name": "single-servicios",
      "title": "Single Service",
      "postTypes": ["servicios"]
    },
    {
      "name": "archive-servicios",
      "title": "Services Archive",
      "postTypes": ["servicios"]
    }
  ],
  "templateParts": [
    {
      "name": "header",
      "title": "Header",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Footer",
      "area": "footer"
    },
    {
      "name": "sidebar",
      "title": "Sidebar",
      "area": "uncategorized"
    }
  ],
  "settings": {
    "appearanceTools": true,
    "useRootPaddingAwareAlignments": true,
    "layout": {
      "contentSize": "1200px",
      "wideSize": "1400px"
    },
    "spacing": {
      "blockGap": true,
      "margin": true,
      "padding": true,
      "units": ["px", "em", "rem", "vh", "vw", "%"]
    },
    "typography": {
      "dropCap": false,
      "fluid": true,
      "fontStyle": true,
      "fontWeight": true,
      "letterSpacing": true,
      "lineHeight": true,
      "textDecoration": true,
      "textTransform": true,
      "fontSizes": [
        {
          "slug": "small",
          "size": "14px",
          "name": "Small"
        },
        {
          "slug": "medium",
          "size": "16px",
          "name": "Medium"
        },
        {
          "slug": "large",
          "size": "18px",
          "name": "Large"
        },
        {
          "slug": "x-large",
          "size": "24px",
          "name": "Extra Large"
        },
        {
          "slug": "xx-large",
          "size": "32px",
          "name": "Extra Extra Large"
        },
        {
          "slug": "hero-title",
          "size": "clamp(3rem, 8vw, 5.5rem)",
          "name": "Hero Title"
        }
      ],
      "fontFamilies": [
        {
          "fontFamily": "\"Poppins\", sans-serif",
          "slug": "poppins",
          "name": "Poppins"
        },
        {
          "fontFamily": "\"Viga\", sans-serif",
          "slug": "viga",
          "name": "Viga"
        }
      ]
    },
    "color": {
      "defaultPalette": false,
      "palette": [
        {
          "slug": "primary",
          "color": "#a17a66",
          "name": "Primary"
        },
        {
          "slug": "primary-dark",
          "color": "#8b6854",
          "name": "Primary Dark"
        },
        {
          "slug": "secondary",
          "color": "#3b3430",
          "name": "Secondary"
        },
        {
          "slug": "accent",
          "color": "#ff6b35",
          "name": "Accent"
        },
        {
          "slug": "gold",
          "color": "#b8860b",
          "name": "Gold"
        },
        {
          "slug": "white",
          "color": "#ffffff",
          "name": "White"
        },
        {
          "slug": "black",
          "color": "#000000",
          "name": "Black"
        },
        {
          "slug": "gray-light",
          "color": "#f8f9fa",
          "name": "Gray Light"
        },
        {
          "slug": "gray-medium",
          "color": "#666666",
          "name": "Gray Medium"
        },
        {
          "slug": "gray-dark",
          "color": "#333333",
          "name": "Gray Dark"
        },
        {
          "slug": "text-muted",
          "color": "#999999",
          "name": "Text Muted"
        }
      ]
    },
    "border": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true
    },
    "blocks": {
      "core/button": {
        "border": {
          "radius": true
        },
        "color": {
          "background": true,
          "text": true
        },
        "spacing": {
          "padding": true
        }
      },
      "core/heading": {
        "typography": {
          "fontFamily": true,
          "fontSize": true,
          "fontWeight": true,
          "lineHeight": true
        }
      },
      "core/paragraph": {
        "typography": {
          "fontSize": true,
          "lineHeight": true
        }
      }
    }
  },
  "styles": {
    "spacing": {
      "blockGap": "0px"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--poppins)",
      "fontSize": "var(--wp--preset--font-size--medium)",
      "lineHeight": "1.6"
    },
    "color": {
      "background": "var(--wp--preset--color--white)",
      "text": "var(--wp--preset--color--gray-dark)"
    },
    "elements": {
      "link": {
        "color": {
          "text": "var(--wp--preset--color--primary)"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--preset--color--primary-dark)"
          }
        }
      },
      "h1": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--viga)",
          "fontSize": "var(--wp--preset--font-size--hero-title)",
          "fontWeight": "400",
          "lineHeight": "1.2"
        }
      },
      "h2": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--viga)",
          "fontSize": "var(--wp--preset--font-size--xx-large)",
          "fontWeight": "400",
          "lineHeight": "1.2"
        }
      },
      "h3": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--viga)",
          "fontSize": "var(--wp--preset--font-size--x-large)",
          "fontWeight": "400",
          "lineHeight": "1.2"
        }
      },
      "h4": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--viga)",
          "fontSize": "var(--wp--preset--font-size--large)",
          "fontWeight": "400",
          "lineHeight": "1.2"
        }
      },
      "button": {
        "border": {
          "radius": "25px"
        },
        "color": {
          "background": "var(--wp--preset--color--primary)",
          "text": "var(--wp--preset--color--white)"
        },
        "spacing": {
          "padding": {
            "top": "12px",
            "right": "24px",
            "bottom": "12px",
            "left": "24px"
          }
        },
        "typography": {
          "fontSize": "var(--wp--preset--font-size--small)",
          "fontWeight": "600",
          "textTransform": "uppercase",
          "letterSpacing": "0.5px"
        },
        ":hover": {
          "color": {
            "background": "var(--wp--preset--color--primary-dark)"
          }
        }
      }
    },
    "blocks": {
      "core/button": {
        "border": {
          "radius": "25px"
        },
        "color": {
          "background": "var(--wp--preset--color--primary)",
          "text": "var(--wp--preset--color--white)"
        },
        "spacing": {
          "padding": {
            "top": "15px",
            "right": "35px",
            "bottom": "15px",
            "left": "35px"
          }
        },
        "typography": {
          "fontSize": "var(--wp--preset--font-size--small)",
          "fontWeight": "600",
          "textTransform": "uppercase",
          "letterSpacing": "0.5px"
        }
      }
    }
  }
}
