{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "carpentry/services-grid",
  "version": "1.0.0",
  "title": "Services Grid",
  "category": "carpentry-blocks",
  "icon": "grid-view",
  "description": "Display services in a dynamic grid layout with pagination",
  "example": {},
  "supports": {
    "html": false,
    "align": [
      "wide",
      "full"
    ],
    "spacing": {
      "margin": true,
      "padding": true
    },
    "color": {
      "background": true,
      "text": true
    }
  },
  "attributes": {
    "sectionTitle": {
      "type": "string",
      "default": "Nuestros Servicios"
    },
    "sectionSubtitle": {
      "type": "string",
      "default": "Servicios profesionales de carpinter√≠a y reformas"
    },
    "showTitle": {
      "type": "boolean",
      "default": true
    },
    "showSubtitle": {
      "type": "boolean",
      "default": true
    },
    "postsPerPage": {
      "type": "number",
      "default": 6
    },
    "columns": {
      "type": "number",
      "default": 3
    },
    "cardStyle": {
      "type": "string",
      "default": "modern",
      "enum": [
        "modern",
        "classic",
        "minimal"
      ]
    },
    "showExcerpt": {
      "type": "boolean",
      "default": true
    },
    "showReadMore": {
      "type": "boolean",
      "default": true
    },
    "readMoreText": {
      "type": "string",
      "default": "Ver Detalles"
    },
    "showPagination": {
      "type": "boolean",
      "default": true
    },
    "backgroundColor": {
      "type": "string",
      "default": "#ffffff"
    },
    "textColor": {
      "type": "string",
      "default": "#333333"
    },
    "accentColor": {
      "type": "string",
      "default": "#a17a66"
    },
    "orderBy": {
      "type": "string",
      "default": "menu_order",
      "enum": [
        "date",
        "title",
        "menu_order",
        "rand"
      ]
    },
    "order": {
      "type": "string",
      "default": "ASC",
      "enum": [
        "ASC",
        "DESC"
      ]
    }
  },
  "textdomain": "carpentry-blocks",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "render": "file:./render.php"
}